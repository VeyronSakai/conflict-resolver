{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@*": ["./*"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "__fixtures__",
    "__tests__",
    "src",
    "eslint.config.mjs",
    "jest.config.js",
    "rollup.config.ts"
  ]
}
